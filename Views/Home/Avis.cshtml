<!DOCTYPE html>
<html>
<head>
    <title>HN - TP LOCAL</title>
    <link rel="stylesheet" href="~/resources/ListeAvis.css" />

</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Liste des Avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Acceuil</a></li>
            <li><a href="/Home/Form">Formulaire</a></li>
        </ul>
    </nav>

   <form>
        
      <table>
          <thead>
                <tr><th colspan="3">Liste</th></tr>
          </thead>
          <tbody>
                <tr>
                    <td>Nom</td>
                    <td>Prenom</td>
                    <td>Avis Donné</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nom</td>
                        <td>@item.Prenom</td>
                        <td style="background-color: @(item.AvisDonne == "O" ? "green" : "red"); color: white; padding: 5px;">
                            @(item.AvisDonne == "O" ? "Oui" : "Non")
                        </td>
                    </tr>
                }
          </tbody>
            
      </table>
   </form>

</body>
</html>
