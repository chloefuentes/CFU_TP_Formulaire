<!DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Form.css" />

</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Acceuil</a></li>
            <li><a href="/Home/Avis">Liste des avis</a></li>
        </ul>
    </nav>
    @model Validation

    <form asp-action="SubmitForm" asp-controller="Home" method="post">
        <table>
            <tr><th colspan="2">Informations personnelles</th></tr>
            <tr>
                <td>Nom</td>
                <td>
                    <input type="text" asp-for="Nom" required />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>
                    <input type="text" asp-for="Prenom" required />
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>
                    <select asp-for="Genre" required>
                        <option value="">Sélectionner un genre</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td><input type="text" asp-for="Adresse" /></td>
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </tr>
            <tr>
                <td>Code postal</td>
                <td>
                    <input type="text" asp-for="CodePostal" maxlength="5" oninput="this.value = this.value.replace(/\D/g, '')" required />
                    <span asp-validation-for="CodePostal" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>
                    <input type="text" asp-for="Ville" required />
                    <span asp-validation-for="Ville" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td>
                    <input type="email" asp-for="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </td>
            </tr>
        </table>

        <table>
            <tr><th colspan="2">Informations formation suivie</th></tr>
            <tr>
                <td>Date début de formation</td>
                <td>
                    <input type="date" asp-for="DateDebFormation" max="2025-01-01" required />
                    <span asp-validation-for="DateDebFormation" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>
                    <select asp-for="Formation" required>
                        <option value="">Sélectionner une formation</option>
                        <option value="Cobol">Formation Cobol</option>
                        <option value="Object">Formation Object</option>
                        <option value="Double-compétences">Formation Double-compétences</option>
                    </select>
                    <span asp-validation-for="Formation" class="text-danger"></span>
                </td>
            </tr>
        </table>

        <table>
            <tr><th colspan="2">Avis sur la formation</th></tr>
            <tr>
                <td>Formation Cobol</td>
                <td>
                    <input type="text" asp-for="AvisCobol" />
                </td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>
                    <input type="text" asp-for="AvisCsharp" />
                </td>
            </tr>
        </table>

        <button type="submit">Valider</button>
    </form>

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    }


</body>

</html>